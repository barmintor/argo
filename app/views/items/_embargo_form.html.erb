<% if current_user and is_admin? current_user.groups %>

<script>
	$(function() {
		$( "#embargo_date" ).datepicker();
	});
	$( "#embargo_date" ).hide();
		$('#embargo_update').dialog({
        autoOpen: false,
        buttons: { "Close": function() { $(this).dialog("close"); } },
        modal: true,
        height: 150,
        width:  400,
        open: function (event, ui)
        {
            $('#embargo_date').show();
        },
				close: function (event, ui)
        {
            $('#embargo_date').hide();
        },
        title: 'Embargo Update',
        resizable: false
      });
</script>
<a href="#" onclick="$('#embargo_update').dialog('open');false;">(update embargo)</a>
<div id='embargo_update'>
<%= form_tag url_for(:controller => :items, :action => :embargo_update), :method => :POST do%>
	
	New date: <input name="embargo_date" id="embargo_date" type="text">
	<%= submit_tag 'update embargo', :class=>'submit', :id=>'submit_embargo' %>
<% end %>

</div><%end%>
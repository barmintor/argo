
<%=form_tag url_for(:controller => :apo, :action => :register) do%>

<br><div class="register-div">
	<label>Title</label><br>
	<input type="text" style="width:auto" size="100" value="" id="title" name="title"></input>
	
</div>
<br><div class="register-div">
	<label>Descriptive Metadata format</label><br>
		<%=select_tag :desc_md, options_for_select(options_for_desc_md)%>
</div>
<br><div class="register-div">
	<label>Default Collections</label><br>
	
		<%= select_tag :collection, options_for_select(current_user.permitted_collections)%>
</div>
<br><div class="register-div">
	<label>Roles</label><br>
	<%=select_tag :role, options_for_select(current_user.known_roles, 'dor-apo-manager')%><br>
	<textarea id="roleplayer" name="roleplayer">workgroup:dlss:developers,</textarea>
</div>
<br><div class="register-div">
	<label>Use</label><br>
	<textarea name="use" id="use"></textarea>
</div>
<br><div class="register-div">
	<label>Copyright</label><br>
	<textarea id='copyright' name="copyright"></textarea>
</div>
<br><div class="register-div">
	<label>Creative Commons license</label><br>
		<%=select_tag :cc_license, options_for_select(creative_commons_options)%>
</div>
<br><div class="register-div">
	<label>Default Object Rights</label><br>
		<%=select_tag :default_object_rights, options_for_select(default_rights_options)%>
</div>
<br><div class="register-div">
	<label>Default workflow</label><br>
	<%=select_tag :workflow, options_for_select(workflow_options)%>
</div>

<br><div class="register-div">
	<label>Agreement</label><br>
	<%=select_tag :agreement, options_for_select(agreement_options)%>
</div>
<button>Register APO</button>
<%end%>
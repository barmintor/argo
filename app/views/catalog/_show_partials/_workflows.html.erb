<table>
  <thead>
  <tr><th>name</th><th>status</th></tr>
  </thead>
  <tbody>
  <%- if workflows.length > 0 -%>
    <%- workflows.each_pair do |wf,status| -%>
      <tr>
        <td><%= link_to wf, workflow_view_catalog_path(document.get('id'), wf), :class => 'dialogLink', :title => wf %></td>
        <td>
          <%= status[:status] %>
          <% if status[:errors] > 0 -%>
          <span class="errortext">(<%= inflect('error', status[:errors]) %>)</span>
          <% end %>
        </td>
      </tr>
    <%- end -%>
  <%- else -%>
    <tr><td colspan="3">No workflows</td></tr>
  <%- end -%>
  </tbody>
</table>
